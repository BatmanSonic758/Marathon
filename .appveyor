version: '0.0.1-{build} ~ {branch}'

branches:
  only:
  - marathon-master

skip_tags: true

configuration:
  - Release
  - Debug

skip_commits:
  files:
    - Marathon.Wiki/**
    - LICENSE
    - README.md
    
assembly_info:
  patch: true
  file: '**\AssemblyInfo.cs'
  assembly_file_version: '0.0.1.{build}'
  assembly_informational_version: '0.0.1-{build}-{$(APPVEYOR_REPO_COMMIT)}'
  
before_build:
- cmd: nuget restore
  
build:
  verbosity: minimal

after_build:
- cmd: |
    7z a Marathon.IO.zip "%APPVEYOR_BUILD_FOLDER%\Marathon.IO\bin\%CONFIGURATION%\netstandard2.0\*"
    7z a Marathon.Toolkit.zip "%APPVEYOR_BUILD_FOLDER%\Marathon.Toolkit\bin\%CONFIGURATION%\*"

artifacts:
- path: Marathon.IO.zip
  name: Marathon.IO
- path: Marathon.Toolkit.zip
  name: Marathon.Toolkit